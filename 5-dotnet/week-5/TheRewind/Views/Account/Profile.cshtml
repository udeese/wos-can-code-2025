@model AccountProfileViewModel
@{
    ViewData["Title"] = "Account Profile";
}

<h1 class="display-4">Profile</h1>

<div class="card shadow">
    <div class="card-body">
        <p class="card-text">
            <strong>Username: </strong> @Model.Username<br />
            <strong>Email: </strong> @Model.Email<br /><br />
            <strong>Movies Added: </strong> @Model.MoviesAddedCount<br />
            <strong>Movies Rated: </strong> @Model.MoviesRatedCount<br />
        </p>
    </div>
</div>