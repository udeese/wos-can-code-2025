@model RatingFormViewModel

<div class="form-text text-danger" asp-validation-summary="All"></div>

<div class="card shadow">
    <div class="card-body">
        <form asp-action="RateMovie" asp-controller="Movie" asp-route-id="@Model.MovieId" method="POST">
            <div class="mb-3">
                <label asp-for="Level" class="form-label">Rate Movie:</label>
                <select class="form-select" asp-for="Level">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
                <span class="form-text text-danger" asp-validation-for="Level"></span>
            </div>
            <div class="text-end">
                <button type="submit" class="btn btn-primary">Rate</button>
            </div>
        </form>
    </div>
</div>